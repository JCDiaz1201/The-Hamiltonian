<header class="intro-header" id="intro-header-img" style="background-image: url('http://fluper.ru/ffh/17/flag_amerika_oblaka_nebo_patriotizm_2560x1600.jpg')" >
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-heading">
                </div>
            </div>
        </div>
    </div>
</header>
<div>
  <div class="col-md-4"></div>
  <div class="col-md-4" align="center">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      <br>
      <p id="notice"><%= notice %></p>
      <div class="pager">
      	<%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
      <div class="pager">
        <h3>Wish to Become a Member?</h3>
        <%= link_to "Sign up now!", new_user_path() %>
      </div>
      <br>
      <br>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>
<br>
<br>
