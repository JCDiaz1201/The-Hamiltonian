<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <div class="col-md-12">
                      <%= render 'layouts/messages' %>
                    </div>
                    <h1>The Hamiltonian</h1>
                    <hr class="small">
                    <span class="subheading">A New Vision for America</span>
                </div>
            </div>
        </div>
    </div>
</header>
<!-- Main Content -->
<div class="container">
    <div class="row" id="index-post-menu">
       <div class="post-preview">
            <% @posts.each do |blog| %>
                <%= link_to post_path(blog.id) do %>
                    <div class="col-md-2">
                        <%= image_tag blog.photo.url(:thumb) %>
                    </div>
                    <div class="col-md-10" id="index-post-info">
                        <h2 class="index-title"><%= blog.title %></h2>
                        <h5 class="index-content"><%= blog.content.truncate(100) %></h5>
                        <p class="index-created-at">-<%= blog.user.pseudonym %>, <%= blog.created_at.strftime("%b %d, %Y") %></p>
                    </div>
                    <br>
                <% end %>
            <% end %> 
        </div>
        <hr>

        <!-- Pager -->
        <div class="col-md-12">
            <ul class="pager">
                <li class="next">
                    <a href="/posts">Blog Archive &rarr;</a>
                </li>
            </ul>      
        </div>
    </div>
</div>


