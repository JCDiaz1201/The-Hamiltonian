<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('http://hdwallpaperbackgrounds.net/wp-content/uploads/2016/08/Black-Background-12.jpg')>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>The New Nationalism</h1>
                    <hr class="small">
                    <span class="subheading">A New and Bold Political Movement</span>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class="post-preview">
                <% @posts.each do |post| %>
                    <%= link_to posts_path('index') do %>
                      <h2><%= post.title %></h2>
                      <h5><%= post.content.truncate(100) %></h5>
                    <% end %>
                    <br>
                <% end %> 
            </div>
            <hr>
            <!-- Pager -->
            <ul class="pager">
                <li class="next">
                    <a href="/posts">Older Posts &rarr;</a>
                </li>
            </ul>
        </div>
    </div>
</div>
